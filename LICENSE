import streamlit as st # type: ignore
from transformers import pipeline

st.title("ğŸ¤– Chatbot de Recetas de Cocina")
st.write("Â¡Bienvenido! Pregunta lo que desees sobre cocina.")

# Cargar el modelo una sola vez
@st.cache_resource()
def load_chatbot():
    try:
        return pipeline("text-generation", model="microsoft/DialoGPT-medium")
    except Exception as e:
        st.error(f"Error al cargar el modelo: {e}")
        return None

chatbot = load_chatbot()

# Interfaz de chat
if chatbot:
    user_input = st.chat_input("ğŸ½ï¸ Â¿QuÃ© deseas saber sobre cocina?")
    if user_input:
        with st.spinner("Pensando..."):
            try:
                response = chatbot(user_input, max_length=100, pad_token_id=50256)
                st.chat_message("assistant").write(response[0]['generated_text'])
            except Exception as e:
                st.error(f"Error al generar respuesta: {e}")
else:
    st.error("No se pudo cargar el chatbot. Intenta recargar la pÃ¡gina.")
